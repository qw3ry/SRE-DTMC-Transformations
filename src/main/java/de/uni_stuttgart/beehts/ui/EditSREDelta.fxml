<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uni_stuttgart.beehts.ui.EditSREDelta">
   <children>
      <TextArea fx:id="sreTextArea" editable="false">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="Monospaced Regular" size="13.0" />
         </font>
      </TextArea>
      <TextArea fx:id="deltaTextArea" wrapText="true">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </TextArea>
      <HBox alignment="CENTER_RIGHT" spacing="20.0">
         <children>
            <ProgressBar fx:id="progress" progress="0.0" />
            <Separator orientation="VERTICAL" />
            <Button mnemonicParsing="false" onAction="#handleClose" text="Close" />
            <Button mnemonicParsing="false" onAction="#handleSave" text="Save" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
